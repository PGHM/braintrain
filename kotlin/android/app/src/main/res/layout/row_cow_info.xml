<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/cow_info_corner_radius" >

        <LinearLayout
            android:id="@+id/content_view"
            android:background="@drawable/cow_info_border"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/app_margin"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/cow_info_logo_size"
                android:layout_height="@dimen/cow_info_logo_size"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_gravity="center"
                android:contentDescription="@string/milk_mate_description"
                android:tint="@color/cowRed"
                android:src="@drawable/ic_cow" />

            <TextView
                android:id="@+id/name"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-black"
                android:textSize="@dimen/cow_info_text_size"
                android:textColor="@color/cowBlue"
                android:text="Cow name here" />

            <ImageView
                android:layout_width="@dimen/cow_info_details_size"
                android:layout_height="@dimen/cow_info_details_size"
                android:layout_marginStart="@dimen/app_margin"
                android:layout_marginEnd="@dimen/app_margin"
                android:layout_gravity="end|center_vertical"
                android:contentDescription="@string/cow_info_details_description"
                android:tint="@color/cowBlue"
                android:src="@drawable/ic_details_box" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>